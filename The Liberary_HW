---count how many students passed the exam.
select
distinct(result_status),
count(result_status)
from day_1_exam
where result_status = 'Pass'
group by result_status

---find the average score of all student who fail .
select
distinct(result_status),
avg(total_score)
from day_1_exam
where result_status = 'Fail'
group by 1

---get the highest score among all students.
select
max(total_score) as Highest_score
from day_1_exam;

--- get the lowest score among passed student.
select
distinct(result_status),
min(total_score) as lower_score
from day_1_exam
where result_status = 'Pass'
group by result_status

---sum the total mark of all students who scored abovr 40.
select
total_score,
sum (total_score)
from day_1_exam
where total_score > 40
group by total_score

--Count students by result status for those who scored 35 or more.
select
distinct(result_status),
count(total_score)
from day_1_exam
where total_score =35 or total_score > 35
group by result_status

--Find average score grouped by result status for students with scores between 30 and 40.
select
distinct(result_status),
round(avg(total_score), 2)
from day_1_exam
where total_score between 30 and 40
group by result_status

---Get maximum and minimum scores grouped by result status for students who scored less than 35.
select
distinct(result_status),
max(total_score) as Higest_score,
min(total_score) as Lower_score
from day_1_exam
where total_score < 35
group by 1

--Count students grouped by result status for those whose names start with 'A'
select
distinct(result_status),
count(result_status)
from day_1_exam
where student_name like 'A%'
group by 1

--Sum total scores grouped by result status for students who scored exactly 35, 40, or 45.
select
distinct(result_status),
sum(total_score)
from day_1_exam
where total_score in(35, 40, 45)
group by 1

---Count students by each score value, ordered by score descending.
select
total_score,
count(total_score)
from day_1_exam
group by total_score
order by total_score desc

---Show average score for each result status, ordered by average score.
select
distinct(result_status),
round(avg(total_score), 2)
from day_1_exam
group by result_status
order by 2

---Count how many students got each score, only for scores above 30, ordered by frequency
select
total_score,
count(total_score)
from day_1_exam
where total_score > 30
group by total_score
order by total_score desc

-----Get total marks sum for each result status, ordered by sum.
select
distinct(result_status),
sum(total_score)
from day_1_exam
group by 1
order by result_status desc

---Find minimum score for each result status, ordered by min score.
select
distinct(result_status),
min(total_score)
from day_1_exam
group by 1
order by 1 desc

---For passed students only, show count, average, max and min scores grouped by whether score is above 40.
select
distinct(result_status),
count(result_status),
round(avg(total_score), 2),
max(total_score) as highest_score,
min(total_score) as lowest_score
from day_1_exam
where total_score > 40
group by 1
order by 1 desc

---Count and average score for each result status, only for scores not equal to 35.
select
distinct(result_status),
count(result_status),
round(avg(total_score), 2)
from day_1_exam
where (total_score >35) or (total_score < 35)
group by 1
order by 1 desc

---Group students by score ranges (0-20, 21-30, 31-40, 41-50) and show count for each range.
select
total_score,
count(total_score)
from day_1_exam


---For each result status, show count of students with scores greater than 30 and less than 40.
select
distinct(result_status),
count(total_score)
from day_1_exam
where total_score >30 and total_score <40
group by 1

---Group by first letter of student name and show count and average score for each letter.
select
student_name
from day_1_exam

